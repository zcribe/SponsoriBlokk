{
    "manifest_version": 2,
    "name": "Sisuturunduse blokker",
    "author": "Erlend Eelmets",
    "version": "0.1",
    "description": "Blokeerib sponsoreeritud artiklid ajalehtedes.",
    "icons": {
      "36": "icons/android-icon-36x36.png",
      "48": "icons/android-icon-48x48.png",
      "72": "icons/android-icon-72x72.png",
      "96": "icons/android-icon-96x96.png",
      "144": "icons/android-icon-144x144.png",
      "192": "icons/android-icon-192x192.png"
    },
    "browser_action": {
      "default_icon": {
        "36": "icons/android-icon-36x36.png",
        "48": "icons/android-icon-48x48.png",
        "72": "icons/android-icon-72x72.png",
        "96": "icons/android-icon-96x96.png",
        "144": "icons/android-icon-144x144.png",
        "192": "icons/android-icon-192x192.png"
      },
      "default_title": "Sisuturunduse blokker",
      "default_popup": "main.html"
    },

    "content_scripts": [
        {
          "matches": ["*://*.postimees.ee/*"],
          "js": ["postimees.js"]
        }
      ],
    
      "background": {
        "scripts": ["postimees-bg.js"]
      },

      "permissions": [
        "activeTab",
        "tabs",
        "webRequest",
        "webRequestBlocking"
      ]
  }